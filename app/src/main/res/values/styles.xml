<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Base styles-->

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="Card" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
    </style>

    <!--Item styles-->

    <style name="Card.Item">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">144dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="TextView.Item"/>

    <style name="TextView.Item.Name">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextView.Item.Category">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextView.Item.OldPrice">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextView.Item.NewPrice">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">@color/textColorAccent</item>
    </style>

    <style name="TextView.Item.Date">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <!--Shop styles-->

    <style name="Card.Shop">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="TextView.Shop"/>

    <style name="TextView.Shop.Name">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <!--Category styles-->

    <style name="Card.Category">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="TextView.Category"/>

    <style name="TextView.Category.Name">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:gravity">center</item>
    </style>

    <!--region Shopping list styles-->

    <style name="Card.ShoppingList">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">96dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="TextView.ShoppingList"/>

    <style name="TextView.ShoppingList.Name">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.ShoppingList.Total">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextView.ShoppingList.Picker">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:padding">8dp</item>
    </style>

    <!--endregion-->
</resources>
